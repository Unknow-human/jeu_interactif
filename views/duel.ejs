<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Duel - Code Duel</title>
  <link rel="stylesheet" href="/css/style.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body class="theme-light">
  <header>
    <h1>Duel entre <%= user.username %> et <%= opponent %></h1>
    <a href="/dashboard">Retour au tableau de bord</a>
    <button id="toggleTheme">Toggle Dark/Light</button>
  </header>
  <main>
    <div id="messages" class="messages"></div>
    <form id="guessForm">
      <input type="text" id="guessInput" maxlength="4" placeholder="Entrez 4 chiffres" required>
      <button type="submit">Envoyer</button>
    </form>
  </main>
  <!-- Inclusion de Socket.io pour la communication en temps rÃ©el -->
  <script src="/socket.io/socket.io.js"></script>
  <script>
    const socket = io();
    const room = "<%= room %>";
    const username = "<%= user.username %>";
    socket.emit('joinRoom', { room, username });

    socket.on('message', data => {
      const messagesDiv = document.getElementById('messages');
      const p = document.createElement('p');
      p.textContent = data.msg;
      messagesDiv.appendChild(p);
      messagesDiv.scrollTop = messagesDiv.scrollHeight;
    });

    document.getElementById('guessForm').addEventListener('submit', e => {
      e.preventDefault();
      const guess = document.getElementById('guessInput').value;
      socket.emit('guess', { guess, username });
      document.getElementById('guessInput').value = '';
    });
  </script>
  <script src="/js/main.js"></script>
</body>
</html>
